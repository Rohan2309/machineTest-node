<%- include("../partials/header") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Categories</h2>
  <a href="/admin/categories/create" class="btn btn-success">+ Add Category</a>
</div>

<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% categories.forEach(c => { %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.slug %></td>
        <td>
          <a href="/admin/categories/<%= c._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
          <form action="/admin/categories/<%= c._id %>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-sm btn-danger">Delete (SOFT)</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include("../partials/footer") %>
